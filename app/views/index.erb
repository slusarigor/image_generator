<h2>Generate images</h2>

<% if params[:success] %>
  <div class="alert alert-success" role="alert">
    Image generate successfully queued, please wait
  </div>
<% end %>

<% if(File.exist?('results/results.zip')) %>
  <div class="alert alert-success" role="alert">
    Download last results <a href='/download'>here</a>
  </div>
<% elsif(Dir["results/images/*"].count > 0) %>
  <div class="alert alert-success" role="alert">
    Processed <%= Dir["results/images/*"].count %> count
  </div>
<% end %>

<% if @categories.length > 0 %>
<div class="overflow-auto">
  <form action="/generate_image" method="post">
    <% @categories.each do |category| %>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#<%= "#{category.name}-category" %>" aria-expanded="false"><%= category.name %></button>
          </h5>
        </div>
      </div>
      <% category.parts.each do |part| %>
        <div class="row">
          <div class="col">
            <div class="collapse multi-collapse" id="<%= "#{category.name}-category" %>">
              <div class="card card-body">
                <div class="form-group row">
                  <label for="<%= "#{category.key}[#{part.name}]" %>" class="col-sm-2 col-form-label"><%= part.name %></label>
                  <div class="col-sm-4">
                    <input name="<%= "#{category.key}[#{part.name}]" %>" type="text" class="form-control" placeholder="Count">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <input class="btn btn-dark" type="submit" value="Generate">
  </form>
</div>
<% else %>
  <div class="alert alert-danger" role="alert">
    Please <a href="/upload_parts">Upload parts first.</a>
  </div>
<% end %>
